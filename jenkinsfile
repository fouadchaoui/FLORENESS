pipeline {
agent { dockerfile {
          filename "Dockerfile"
          label "webapps"
        }
}
   stages {
        stage('Test') {
            steps {
                sh 'curl --head http://localhost:80'
            }
        }
    }
    stage ('register') {

    checkout scm

    docker.withRegistry('https://registry.hub.docker.com', 'foufou95-docker-hub-credential') {

        def customImage = docker.build("foufou95/floreness")

        /* Push the container to the custom Registry */
        customImage.push()
    }
}
}
